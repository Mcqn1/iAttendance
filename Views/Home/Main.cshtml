@{
    ViewBag.Title = "Main";
}
<main aria-labelledby="title" style="text-align: center; padding: 20px;">
    <h2 id="title">@ViewBag.Title</h2>

    <section class="button-section" style="margin-top: 40px;">
        <button id="registerButton" class="btn btn-primary btn-lg custom-button">Registration</button>
        <button id="AttendanceButton" class="btn btn-secondary btn-lg custom-button">Attendance</button>
        <button id="employeeButton" class="btn btn-success btn-lg custom-button">Employee</button>
        <button id="InOutButton" class="btn btn-primary btn-lg custom-button">In/Out</button>
    </section>

    <script>
        document.getElementById('registerButton').addEventListener('click', function () {
            window.location.href = 'http://localhost/iAttendance/Home/Registration';
        });

        document.getElementById('AttendanceButton').addEventListener('click', function () {
            window.location.href = 'http://localhost/iAttendance/Home/Attendance';
        });

        document.getElementById('employeeButton').addEventListener('click', function () {
            window.location.href = 'http://localhost/iAttendance/Home/Employee'; 
        });

        document.getElementById('InOutButton').addEventListener('click', function () {
            window.location.href = 'http://localhost/iAttendance/Home/InOut'; 
        });
    </script>

    <style>
        body {
            background-color: #14142b;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            color: #f8f9fa;
        }

        h2 {
            color: #f8f9fa;
            font-size: 2.5em;
            margin-bottom: 30px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .button-section {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 50px;
        }

        .btn {
            padding: 40px 100px;
            font-size: 1.5em;
            border-radius: 10px;
            cursor: pointer;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            position: relative;
            overflow: hidden;
        }

        .custom-button {
            background-color: #6c757d;
            color: #fff;
        }

        .custom-button:hover {
            background: linear-gradient(to right, #6c757d, #5a6268);
            transform: scale(1.05);
            box-shadow: 0 6px 10px rgba(90, 98, 104, 0.3), 0 0 10px rgba(90, 98, 104, 0.5);
        }

        .custom-button::before {
            content: "";
            position: absolute;
            top: 0;
            right: -10px;
            width: 60px;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(45deg);
            opacity: 0;
            transition: all 0.5s ease-in-out;
        }

        .custom-button:hover::before {
            right: -40px;
            opacity: 1;
            transition: all 0.5s ease-in-out;
        }

        @@media (max-width: 768px) {
            .btn {
                padding: 30px 80px;
                font-size: 1.2em;
            }
        }

        @@media (max-width: 480px) {
            .button-section {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                padding: 20px;
                margin: 10px 0;
            }

            h2 {
                font-size: 2em;
            }
        }
    </style>
</main>
